            background: #fee2b3;
            padding: 100px 0;
            position: relative;
        }

        .col-lg-3 .heading h3 {
            font-size: 35px;
        }

        .subtitle {
            text-transform: uppercase;
            color: rgba(0, 0, 0, .5);
            font-size: 12px;
            font-weight: 700;
            letter-spacing: .1rem;
        }

        .red,
        .price {
            color: red;
        }

        .menu-items {}

        .img-fluid {
            max-width: 100%;
            width: 287px;
            height: 165px;
            border-radius: 16px;
        }

        .drink {
            max-width: 100%;
            height: 30px;
        }

        img {
            vertical-align: middle;
            border-style: none;
        }

        .menu-down li a {
            font-size: 20px;
            display: block;
            margin-bottom: 10px;
            padding: 15px 20px;
            text-align: center;
            border: 2px solid white;
            border-radius: 30px;
            color: #000;
            text-decoration: none;
        }

        .menu-down li a:hover {
            background: #ffffff;
            transition: 1s;
        }

        .menu-down li img {
            width: 25px;
            margin-right: 20px;
        }

